<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?>
<?import de.jensd.fx.glyphs.octicons.OctIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="CCCButtonsVBox" alignment="TOP_CENTER" prefHeight="482.0" prefWidth="235.0" spacing="15.0" xmlns="http://javafx.com/javafx/8.0.231" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.crDetails.ccc.CCCButtons">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <children>
      <Button fx:id="viewEvaluationReportButton" contentDisplay="RIGHT" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showEvaluationReport" prefHeight="35.0" style="-fx-background-radius: 10;" text="View Evaluation Report" textAlignment="CENTER">
         <font>
            <Font size="14.0" />
         </font>
         <graphic>
            <OctIconView glyphName="CLIPPY" size="18" />
         </graphic>
      </Button>
      <Button fx:id="setDecisionButton" contentDisplay="RIGHT" disable="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showSetDecisionDialog" prefHeight="35.0" style="-fx-background-radius: 10;" text="Set Decision">
         <font>
            <Font size="14.0" />
         </font>
         <graphic>
            <FontAwesomeIconView glyphName="LIGHTBULB_ALT" size="20" />
         </graphic>
      </Button>
      <Button fx:id="assignTesterButton" contentDisplay="RIGHT" disable="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showAssignTesterDialog" prefHeight="35.0" style="-fx-background-radius: 10;" text="Assign Tester">
         <font>
            <Font size="14.0" />
         </font>
         <graphic>
            <MaterialDesignIconView glyphName="ACCOUNT_PLUS" size="20" />
         </graphic>
      </Button>
      <JFXButton fx:id="moreInformationButton" alignment="TOP_LEFT" onAction="#moreInformationEvent" prefHeight="26.0" prefWidth="215.0" text="Why this button is disable?" textFill="#1b0eae" underline="true">
         <graphic>
            <FontAwesomeIconView fill="#3073d9" glyphName="EXCLAMATION_CIRCLE" size="20" text="" />
         </graphic>
         <font>
            <Font size="14.0" />
         </font>
      </JFXButton>
   </children>
</VBox>
