<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane style="-fx-background-color: #3F2B63;" stylesheets="@../../../css/fullpackstyling.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.crDetails.tester.TesterButtons">
   <children>
      <VBox spacing="10.0" style="-fx-background-color: #3F2B63;">
         <children>
            <Button fx:id="setDecisionButton" alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#showSetDecisionDialog" prefHeight="50.0" prefWidth="250.0" text="Set Decision" textFill="#f8f8f8">
               <padding>
                  <Insets left="10.0" />
               </padding>
               <font>
                  <Font size="16.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <graphic>
                  <FontAwesomeIconView fill="WHITE" glyphName="LIGHTBULB_ALT" size="25" />
               </graphic>
            </Button>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets left="10.0" />
         </padding>
      </VBox>
      <Button fx:id="setDecisionInfo" alignment="CENTER" contentDisplay="CENTER" layoutX="250.0" mnemonicParsing="false" onAction="#setDecisionInfoMsg" prefHeight="50.0" prefWidth="50.0" text=" " textFill="#3f2b63">
         <graphic>
            <FontAwesomeIconView fill="#938e8e" glyphName="QUESTION_CIRCLE" size="22" />
         </graphic>
      </Button>
   </children>
</Pane>
