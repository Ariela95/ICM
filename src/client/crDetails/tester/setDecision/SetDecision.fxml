<DialogPane prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8.0.202" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.crDetails.tester.setDecision.SetDecision">
   <content>
      <AnchorPane prefHeight="300.0" prefWidth="401.0" style="-fx-background-color: white;">
         <children>
            <Label layoutX="36.0" layoutY="123.0" text="Decision:">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <ChoiceBox fx:id="decisionChoiceBox" layoutX="124.0" layoutY="124.0" prefWidth="257.0" style="-fx-background-radius: 10;" />
            <Label layoutX="24.0" layoutY="179.0" text="Description:">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextArea fx:id="descriptionTextArea" layoutX="124.0" layoutY="159.0" prefHeight="67.0" prefWidth="257.0" promptText="Enter the decision description" />
            <Button fx:id="okButton" layoutX="305.0" layoutY="250.0" mnemonicParsing="false" onAction="#submitDecision" style="-fx-background-radius: 10; -fx-background-color: #4b92e8;" text="Submit">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="cancelButton" cancelButton="true" layoutX="205.0" layoutY="250.0" mnemonicParsing="false" style="-fx-background-radius: 10;" text="Cancel">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Label alignment="CENTER" layoutX="124.0" layoutY="55.0" text="Set Decision">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
            </Label>
            <ImageView fitHeight="69.0" fitWidth="151.0" layoutX="1.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../logo6.PNG" />
               </image>
            </ImageView>
            <FontAwesomeIconView fill="#4b92e8" glyphName="LIGHTBULB_ALT" layoutX="288.0" layoutY="85.0" size="30" />
         </children>
      </AnchorPane>
   </content>
</DialogPane>
