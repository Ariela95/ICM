<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane prefWidth="300.0" style="-fx-background-color: #3F2B63;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.crDetails.evaluator.EvaluatorButtons">
   <children>
      <VBox prefWidth="250.0" spacing="10.0" style="-fx-background-color: #3F2B63;">
         <children>
            <Button fx:id="requestPhaseTimeButton" alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#showRequestTimeDialog" prefHeight="50.0" prefWidth="250.0" stylesheets="@../../../css/fullpackstyling.css" text=" Request Phase Time" textFill="#f8f8f8">
               <padding>
                  <Insets left="10.0" />
               </padding>
               <font>
                  <Font size="16.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <graphic>
                  <MaterialDesignIconView fill="WHITE" glyphName="ALARM" size="25" />
               </graphic>
            </Button>
            <Button fx:id="createEvaluationReportButton" alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#showCreateEvaluationReportDialog" prefHeight="50.0" prefWidth="250.0" stylesheets="@../../../css/fullpackstyling.css" text=" Create Evaluation Report" textFill="#f8f8f8">
               <padding>
                  <Insets left="10.0" />
               </padding>
               <font>
                  <Font size="16.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <graphic>
                  <MaterialDesignIconView fill="WHITE" glyphName="CONTENT_PASTE" size="25" />
               </graphic>
            </Button>
            <JFXButton fx:id="returnRequestInfo" alignment="TOP_LEFT" onAction="#importantInfoEvent" prefHeight="26.0" prefWidth="215.0" text="important info" textFill="WHITE" underline="true">
               <font>
                  <Font size="18.0" />
               </font>
               <graphic>
                  <FontAwesomeIconView fill="#477ed0" glyphName="EXCLAMATION_CIRCLE" size="30" text="" />
               </graphic>
            </JFXButton>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets left="10.0" />
         </padding>
      </VBox>
      <Button fx:id="phaseTimeRequestInfo" alignment="CENTER" contentDisplay="CENTER" layoutX="250.0" mnemonicParsing="false" onAction="#requestPhaseTimeInfoMsg" prefHeight="50.0" prefWidth="50.0" stylesheets="@../../../css/fullpackstyling.css" text=" " textFill="#3f2b63">
         <graphic>
            <FontAwesomeIconView fill="#938e8e" glyphName="QUESTION_CIRCLE" size="22" />
         </graphic>
      </Button>
      <Button fx:id="createReportInfo" alignment="CENTER" contentDisplay="CENTER" layoutX="250.0" layoutY="60.0" mnemonicParsing="false" onAction="#createEvaluationReportInfoMsg" prefHeight="50.0" prefWidth="50.0" stylesheets="@../../../css/fullpackstyling.css" text=" " textFill="#3f2b63">
         <graphic>
            <FontAwesomeIconView fill="#938e8e" glyphName="QUESTION_CIRCLE" size="22" />
         </graphic>
      </Button>
   </children>
</Pane>
