<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="482.0" prefWidth="235.0" spacing="15.0" xmlns="http://javafx.com/javafx/8.0.231" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.crDetails.executiveLeader.ExecutiveLeaderButtons">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <children>
      <Button fx:id="requestPhaseTimeButton" alignment="CENTER" contentDisplay="RIGHT" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showRequestTimeDialog" prefHeight="35.0" style="-fx-background-radius: 10;" text="Request Phase Time" textAlignment="CENTER">
         <font>
            <Font size="14.0" />
         </font>
         <graphic>
            <MaterialDesignIconView glyphName="ALARM" size="20" />
         </graphic>
      </Button>
      <Button fx:id="confirmExecutionButton" contentDisplay="RIGHT" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#confirmExecution" prefHeight="35.0" style="-fx-background-radius: 10;" text="Confirm Execution">
         <font>
            <Font size="14.0" />
         </font>
         <graphic>
            <FontAwesomeIconView glyphName="CHECK" size="20" />
         </graphic>
      </Button>
      <JFXButton fx:id="moreInformationButton" alignment="TOP_LEFT" onAction="#moreInformationEvent" prefHeight="26.0" prefWidth="215.0" text="Why this button is disable?" textFill="#1b0eae" underline="true">
         <graphic>
            <FontAwesomeIconView fill="#3073d9" glyphName="EXCLAMATION_CIRCLE" size="20" text="" />
         </graphic>
         <font>
            <Font size="14.0" />
         </font>
      </JFXButton>
   </children>
</VBox>
